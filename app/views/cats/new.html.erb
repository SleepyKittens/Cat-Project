<%= form_tag('/cats', method: :post) do %>
  <div class='form-field'>
    <label>Name:</label>
    <input name='name'></input>
  </div>
  <div class='form-field'>
    <label>Age:</label>
    <input name='age' type='number' min="0" step="1"></input>
  </div>
  <div class='form-field'>
    <label>Location:</label>
    <input name='location'></input>
  </div>
  <div class='form-field'>
    <label>Favourite Food:</label>
    <input name='favourite_food'></input>
  </div>
  <div class='form-field'>
    <label>Favourite Toy:</label>
    <input name='favourite_toy'></input>
  </div>
  <div class='form-field'>
    <input type='submit'></input>
  </div>
<% end %>

